{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "esnext.asynciterable", "es2020"],
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
    // "lib": ["ES2020"],
    // "module": "CommonJS",
    // "target": "ES2020"
  }
}
